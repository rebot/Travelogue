{
  "name": "BicycleBlog",
  "version": "1.0.0",
  "description": "A travel blog about bycycles",
  "author": "B0hr <trenson.gilles@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "echo \"Hallo wereld\" && exit 1",
    "debug": "npm-run-all -p build:* watch:*",
    "watch:html": "npx reload -b -w dist -w ./",
    "watch:js": "npx watchify src/index.js -t babelify -o dist/bundle.js --debug",
    "watch:css": "npx node-sass src/css/style.scss -w dist/style.css",
    "build": "yarn run -s build:js && yarn run -s build:css",
    "build:js": "npx browserify src/index.js -t babelify -o dist/bundle.js",
    "build:css": "npx node-sass src/css/style.scss dist/style.css"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "babelify": "^10.0.0",
    "browserify": "^16.5.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "npx": "^10.2.2",
    "reload": "^3.0.4",
    "watchify": "^3.11.1"
  },
  "dependencies": {
    "@mapbox/vector-tile": "^1.3.1",
    "@turf/turf": "^5.1.6",
    "bootstrap": "^4.4.1",
    "maki": "^2.1.0",
    "mapbox-gl": "^1.7.0",
    "pbf": "^3.2.1"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "@babel/preset-env"
          ]
        }
      ]
    ]
  }
}
