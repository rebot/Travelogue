{
  "name": "BicycleBlog",
  "version": "1.0.0",
  "description": "A travel blog about bycycles",
  "main": "index.js",
  "author": "B0hr <trenson.gilles@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "echo \"Hallo wereld\" && exit 1",
    "debug": "npm-run-all -p build:* watch:*",
    "watch:html": "npx reload -b -w dist -w ./",
    "watch:js": "npx watchify src/index.js -t babelify -o dist/bundle.js",
    "watch:css": "npx node-sass src/css/style.scss -w dist/style.css",
    "build": "yarn run -s build:js && yarn run -s build:css",
    "build:js": "npx browserify src/index.js -t babelify -o dist/bundle.js",
    "build:css": "npx node-sass src/css/style.scss dist/style.css"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "babelify": "^10.0.0",
    "browserify": "^16.5.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "npx": "^10.2.2",
    "reload": "^3.0.4",
    "watchify": "^3.11.1"
  }
}
